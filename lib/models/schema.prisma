  evidence    EvidenceNode? @relation(fields: [evidenceId], references: [id], onDelete: Cascade)
  targetKind  String        @default("argument")
  targetId    String?       @default(cuid())
  selectors   Json? // annotation anchors
  note        String?
  uri         String
  snapshotKey String?

  ArgumentDiagram   ArgumentDiagram? @relation(fields: [argumentDiagramId], references: [id])
  argumentDiagramId String?
}
